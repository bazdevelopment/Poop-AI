{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": true,
  "include": [
    "src",
    "utilities/languages.ts",
    "utilities/multipart.ts",
    "./utilities/check-daily-scan-limit.ts",
    "./utilities/convert-buffer-base-64.ts",
    "./utilities/generate-unique-id.ts",
    "./utilities/ai-models.ts",
    "./utilities/push-notifications-utils.ts",
    "./utilities/timezones.ts",
    "./utilities/fake-context.ts",
    "./utilities/rewards-pricing.ts",
    "dayjs/index.ts"
  ]
}
